{% macro list(zones) %}

{% if zones|length > 0 %}
    <table id="zones" class="table table-bordered">
        <thead>
            <tr>
                <th>{{ sylius_resource_sort('id', '#id') }}</th>
                <th>{{ sylius_resource_sort('name') }}</th>
                <th>{{ sylius_resource_sort('type') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr class="zones-row">
                <td>{{ zone.id }}</td>
                <td>{{ zone.name }}</td>
                <td>{{ zone.type }}</td>
                <td>
                    <div class="btn-group pull-right">
                        <a href="{{ path('sylius_backend_zone_show', {'id': zone.id}) }}" class="btn">
                           <i class="icon-book"></i> {{ 'sylius.backend.show'|trans }}
                        </a>
                        <a href="{{ path('sylius_backend_zone_update', {'id': zone.id}) }}" class="btn">
                            <i class="icon-pencil"></i> {{ 'sylius.backend.edit'|trans }}
                        </a>
                        <a href="{{ path('sylius_backend_zone_delete', {'id': zone.id}) }}"  class="btn btn-danger">
                            <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">
        <h4 class="alert-heading">Information</h4>
        There are no zones configured
    </div>
{% endif %}

{% endmacro %}
