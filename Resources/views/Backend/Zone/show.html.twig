{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.zone.show_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_zone_index') }}" class="btn btn-primary">
        <i class="icon-list-alt"></i> {{ 'sylius.backend.zone.manage'|trans }}
    </a>
    <a href="{{ path('sylius_backend_zone_update', {'id': zone.id}) }}" class="btn">
        <i class="icon-pencil"></i> {{ 'sylius.backend.edit'|trans }}
    </a>
    <a href="{{ path('sylius_backend_zone_delete', {'id': zone.id}) }}" class="btn btn-danger">
        <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
    </a>
</div>

<table class="table table-bordered table-consensed">
    <thead>
        <tr>
            <th>{{ 'sylius.zone.name'|trans }}</th>
            <th>{{ 'sylius.zone.type'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ zone.name }}</td>
            <td>{{ zone.type }}</td>
        </tr>
    </tbody>
</table>
{% if zone.hasMembers %}
    <table id="members" class="table table-bordered table-consensed">
        <thead>
            <tr>
                <th>{{ 'sylius.zone_member.members'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for member in zone.members %}
                <tr>
                    <td>{{ member.name }}</td>
                    <td>
                        <div class="btn-group pull-right">
                            <a href="{{ path('sylius_backend_zone_member_delete', {'zoneId': zone.id, 'id': member.id}) }}"  class="btn btn-danger">
                                <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
