{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block javascripts %}
    {% javascripts
        '@SyliusAddressingBundle/Resources/assets/js/sylius-addressing-zone.js'
    %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.zone.update_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_zone_update', {'id': zone.id}) }}" method="post" class="form-horizontal">
    {% include 'SyliusWebBundle:Backend/Zone:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'sylius.backend.save_changes'|trans }}" class="btn btn-primary btn-large" />
        <a href="{{ path('sylius_backend_zone_index') }}" class="btn btn-large">{{ 'sylius.backend.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
