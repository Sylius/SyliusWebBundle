{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.payment.create_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_payment_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Payment:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'sylius.create'|trans }}" class="btn btn-primary btn-large" />
        <a href="{{ path('sylius_backend_payment_index') }}" class="btn btn-large">{{ 'sylius.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
