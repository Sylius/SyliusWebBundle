{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% set taxonomy = taxon.taxonomy %}

{% block content %}
<div class="page-header">
<h1>{{ 'sylius.backend.taxon.create_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_taxon_create', {'taxonomyId': taxonomy.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Taxon:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'sylius.backend.create'|trans }}" class="btn btn-primary btn-large" />
        <a href="{{ path('sylius_backend_taxonomy_show', {'id': taxonomy.id}) }}" class="btn btn-large">{{ 'sylius.backend.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
