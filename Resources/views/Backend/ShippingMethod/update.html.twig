{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@SyliusShippingBundle/Resources/assets/js/sylius-shipping-method.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.shipping_method.update_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_shipping_method_update', {'id': shipping_method.id}) }}" method="post" class="form-horizontal" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/ShippingMethod:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'sylius.backend.save_changes'|trans }}" class="btn btn-primary btn-large" />
        <a href="{{ path('sylius_backend_shipping_method_index') }}" class="btn btn-large">{{ 'sylius.backend.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
