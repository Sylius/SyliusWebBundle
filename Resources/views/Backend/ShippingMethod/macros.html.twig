{% macro list(methods) %}

{% if methods|length > 0 %}
    <table class="table" id="shipping-methods">
        <thead>
            <tr>
                <th>{{ sylius_resource_sort('id', '#id') }}</th>
                <th>{{ sylius_resource_sort('name') }}</th>
                <th>{{ sylius_resource_sort('category') }}</th>
                <th>{{ sylius_resource_sort('enabled', 'is enabled?') }}</th>
                <th>{{ sylius_resource_sort('calculator') }}</th>
                <th>{{ sylius_resource_sort('updatedAt', 'last updated') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for method in methods %}
            <tr class="shipping-methods-row">
                <td>{{ method.id }}</td>
                <td>{{ method.name }}</td>
                <td>{{ method.category|default('<i>undefined</i>')|raw }}</td>
                <td>
                    <span class="label label-{{ method.enabled ? 'success' : 'important'}}">
                        {{ method.enabled ? 'sylius.backend.yes'|trans : 'sylius.backend.no'|trans }}
                    </span>
                </td>
                <td><span class="label label-info">{{ method.calculator }}</span></td>
                <td>{{ method.updatedAt|date }}</td>
                <td>
                    <div class="btn-group pull-right">
                        <a href="{{ path('sylius_backend_shipping_method_show', {'id': method.id}) }}" class="btn">
                           <i class="icon-book"></i> {{ 'sylius.backend.show'|trans }}
                        </a>
                        <a href="{{ path('sylius_backend_shipping_method_update', {'id': method.id}) }}" class="btn">
                           <i class="icon-pencil"></i> {{ 'sylius.backend.edit'|trans }}
                        </a>
                        <a href="{{ path('sylius_backend_shipping_method_delete', {'id': method.id}) }}" class="btn btn-danger">
                            <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info">
        <h4 class="alert-heading">{{ 'sylius.backend.alert.info'|trans }}</h4>
        {{ 'sylius.backend.shipping_method.no_results'|trans }}
    </div>
{% endif %}

{% endmacro %}
