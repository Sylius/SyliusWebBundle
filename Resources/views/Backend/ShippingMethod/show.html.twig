{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.shipping_method.show_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_shipping_method_index') }}" class="btn btn-primary">
        <i class="icon-list-alt"></i> {{ 'sylius.backend.shipping_method.manage'|trans }}
    </a>
    <a href="{{ path('sylius_backend_shipping_method_update', {'id': method.id}) }}" class="btn">
        <i class="icon-pencil"></i> {{ 'sylius.backend.edit'|trans }}
    </a>
    <a href="{{ path('sylius_backend_shipping_method_delete', {'id': method.id}) }}" class="btn btn-danger">
        <i class="icon-trash"></i> {{ 'sylius.backend.delete'|trans }}
    </a>
</div>

<table class="table table-bordered table-consensed">
    <thead>
        <tr>
            <th>name</th>
            <th>zone</th>
            <th>category</th>
            <th>is enabled?</th>
            <th>calculator</th>
            <th>last updated</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ method.name }}</td>
            <td>{{ method.zone }}</td>
            <td>{{ method.category|default('<i>undefined</i>')|raw }}</td>
            <td>
                <span class="label label-{{ method.enabled ? 'success' : 'important'}}">
                    {{ method.enabled ? 'sylius.backend.yes'|trans : 'sylius.backend.no'|trans }}
                </span>
            </td>
            <td><span class="label label-info">{{ method.calculator }}</span></td>
            <td>{{ method.updatedAt|date }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}
