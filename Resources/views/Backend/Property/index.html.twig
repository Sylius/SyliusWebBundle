{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle:Backend/Property:macros.html.twig' as macros %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.property.index_header'|trans|raw }}</h1>
</div>

<div class="well">
    <a href="{{ path('sylius_backend_property_create') }}" class="btn btn-primary">
        <i class="icon-plus-sign"></i> {{ 'sylius.property.create'|trans }}
    </a>
    <a href="{{ path('sylius_backend_option_index') }}" class="btn btn-success">
        <i class="icon-adjust"></i> {{ 'sylius.option.manage'|trans }}
    </a>
</div>

{% if properties.haveToPaginate() %}
    {{ pagerfanta(properties, 'twitter_bootstrap_translated') }}
{% endif %}

{{ macros.list(properties) }}

{% if properties.haveToPaginate() %}
    {{ pagerfanta(properties, 'twitter_bootstrap_translated') }}
{% endif %}
{% endblock %}
