{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusWebBundle:Backend/Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Product:macros.html.twig' import list %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.product.index_header'|trans|raw }}</h1>
</div>

<div class="well well-small">
    {{ buttons.create(path('sylius_backend_product_create'), 'sylius.backend.product.create') }}
    {{ buttons.manage(path('sylius_backend_option_index'), 'sylius.backend.option.manage') }}
    {{ buttons.manage(path('sylius_backend_property_index'), 'sylius.backend.property.manage') }}
</div>

<div class="row-fluid">
    <div class="span6">
        {{ pagination(products) }}
    </div>
    <div class="span6">
        {% render(url('sylius_backend_product_filter_form')) %}
    </div>
</div>

{{ list(products) }}
{{ pagination(products) }}

{% endblock %}
