{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.user.show_header'|trans|raw }}</h1>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">User details for {{ user.username }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>#id</strong></td>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <td><strong>username</strong></td>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <td><strong>email</strong></td>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <td><strong>enabled</strong></td>
            <td>
            {% if user.enabled %}
                <span class="label label-success">{{ 'sylius.backend.yes'|trans }}</span>
            {% else %}
                <span class="label label-important">{{ 'sylius.backend.no'|trans }}</span>
            {% endif %}
            </td>
        </tr>
        {% if user.lastLogin %}
        <tr>
            <td><strong>last login</strong></td>
            <td>{{ user.lastLogin|date }}</td>
        </tr>
        {% endif %}
    </tbody>
</table>
{% endblock %}
