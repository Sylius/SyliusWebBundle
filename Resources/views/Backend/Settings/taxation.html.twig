{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusWebBundle:Backend/Macros:actions.html.twig' import update %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.settings.taxation_header'|trans|raw }}</h1>
</div>

<form action="{{ path('sylius_backend_taxation_settings') }}" method="post" class="form-horizontal" novalidate>
    {{ form_errors(form) }}
    {{ form_row(form.default_tax_zone, {'attr': {'class': 'input-large'}}) }}
    {{ form_rest(form) }}
    {{ update() }}
</form>
{% endblock %}
